{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "electron-vite/node"],
    "outDir": "dist"
  },
  "include": ["src/main/**/*", "src/preload/**/*"],
  "exclude": ["node_modules"]
}
